{
  // This file is used to compile the for cjs and esm (see package.json build scripts). It should exclude all test files.
  "extends": "./tsconfig.base.json",
  "include": ["../src"],
  "exclude": [
    "../examples/**/*.ts",
    "../test/**/*.ts",
    "../src/**/*.spec.ts",
    "../src/**/__mocks__/*.ts",
    "../src/testing/**/*.ts"
  ],
  "compilerOptions": {
    "sourceMap": true,
    "rootDir": "../src"
  }
}
